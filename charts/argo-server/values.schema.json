{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "ingressDisabled": {
      "type": "object",
      "properties": {
        "create": { "const": false }
      },
      "required": ["create"],
      "additionalProperties": false
    },
    "ingressEnabled": {
      "type": "object",
      "properties": {
        "create": { "const": true },
        "ipName": { "type": "string" },
        "domainName": { "type": "string" }
      },
      "required": ["create", "ipName", "domainName"]
    }
  },
  "properties": {
    "persistence": {
      "type": "object",
      "properties": {
        "host": { "type": "string" },
        "port": { "type": "integer" },
        "database": { "type": "string" },
        "username": { "type": "string" },
        "password": {
          "type": "object",
          "properties": {
            "secretName": { "type": "string" },
            "secretKey": { "type": "string" }
          },
          "required": ["secretName", "secretKey"]
        },
        "clusterId": { "type": "string" }
      },
      "required": ["host", "port", "database", "username", "password", "clusterId"]
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" }
      },
      "required": ["create"]
    },
    "service": {
      "type": "object",
      "properties": {
        "port": { "type": "integer" },
        "ingress": {
          "oneOf": [
            { "$ref": "#/definitions/ingressDisabled" },
            { "$ref": "#/definitions/ingressEnabled" }
          ]
        }
      },
      "required": ["port", "ingress"]
    },
    "debug": { "type": "boolean" }
  },
  "required": ["persistence", "rbac", "service", "debug"]
}
