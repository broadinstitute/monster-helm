{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "generatePVC": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      },
      "required": ["create"]
    },
    "deletePVC": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      },
      "required": ["create"]
    },
    "downloadFTPFile": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      },
      "required": ["create"]
    },
    "downloadS3File": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      },
      "required": ["create"]
    },
    "copyToGCS": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      },
      "required": ["create"]
    },
    "gsutilRsync": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      },
      "required": ["create"]
    },
    "createBQDataset": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      },
      "required": ["create"]
    },
    "diffBQTable": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "create": { "const": false }
          },
          "additionalProperties": false,
          "required": ["create"]
        },
        {
          "type": "object",
          "properties": {
            "create": { "const": true },
            "name": { "type": "string" },
            "schemaImageName": { "type": "string" },
            "schemaImageVersion": { "type": "string" },
            "generateMetrics": { "type": "boolean" }
          },
          "required": ["create", "name", "schemaImageName"]
        }
      ]
    },
    "exportBQTable": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      }
    },
    "ingestFile": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      }
    },
    "ingestTable": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      }
    },
    "softDeleteTable": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" }
      }
    }
  },
  "required": ["generatePVC", "deletePVC",
               "downloadFTPFile", "downloadS3File",
               "copyToGCS", "gsutilRsync",
               "createBQDataset", "diffBQTable", "exportBQTable",
               "ingestFile", "ingestTable", "softDeleteTable"]
}
