{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "executor": {
      "type": "string",
      "enum": ["docker", "pns"]
    },
    "persistence": {
      "type": "object",
      "properties": {
        "host": { "type": "string" },
        "port": { "type": "integer" },
        "database": { "type": "string" },
        "tableName": { "type": "string" },
        "username": { "type": "string" },
        "password": {
          "type": "object",
          "properties": {
            "secretName": { "type": "string" },
            "secretKey": { "type": "string" }
          },
          "required": ["secretName", "secretKey"]
        }
      },
      "required": ["host", "port", "database", "tableName", "username", "password"]
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" }
      },
      "required": ["create"]
    },
    "debug": { "type": "boolean" }
  },
  "required": ["executor", "persistence", "rbac", "debug"]
}
