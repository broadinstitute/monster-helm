{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "disabled": {
      "type": "object",
      "properties": { "enabled": { "const": false } },
      "additionalProperties": false
    }
  },
  "properties": {
    "executor": {
      "type": "string",
      "enum": ["docker", "pns"]
    },
    "persistence": {
      "type": "object",
      "properties": {
        "host": { "type": "string" },
        "port": { "type": "integer" },
        "database": { "type": "string" },
        "username": { "type": "string" },
        "password": {
          "type": "object",
          "properties": {
            "secretName": { "type": "string" },
            "secretKey": { "type": "string" }
          },
          "required": ["secretName", "secretKey"]
        }
      },
      "required": ["host", "port", "database", "username", "password"]
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" }
      },
      "required": ["create"]
    },
    "debug": { "type": "boolean" },
    "clusterName": { "type": "string" },
    "workflowDefaults": {
      "type": "object",
      "properties": {
        "podGarbageCollection": {
          "oneOf": [
            { "$ref": "#/definitions/disabled" },
            {
              "type": "object",
              "properties": {
                "enabled": { "const": true },
                "strategy": {
                  "enum": [
                    "OnPodCompletion",
                    "OnPodSuccess",
                    "OnWorkflowCompletion",
                    "OnWorkflowSuccess"
                  ]
                }
              },
              "required": ["enabled", "strategy"]
            }
          ]
        },
        "workflowTTL": {
          "oneOf": [
            { "$ref": "#/definitions/disabled" },
            {
              "type": "object",
              "properties": {
                "enabled": { "const": true },
                "secondsAfterSuccess": { "type": "integer" },
                "secondsAfterFailure": { "type": "integer" }
              },
              "required": ["enabled", "secondsAfterSuccess", "secondsAfterFailure"]
            }
          ]
        }
      },
      "required": ["podGarbageCollection", "workflowTTL"]
    }
  },
  "required": ["executor", "persistence", "rbac", "debug", "clusterName", "workflowDefaults"]
}
